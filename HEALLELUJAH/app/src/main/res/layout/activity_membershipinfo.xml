<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".membershipinfo">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#AAAAAA"
        android:text="회      원"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:enabled="false"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="회원 가입"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <Button
        android:id="@+id/prevMemberChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전화면"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginEnd="64dp"
        android:text="아이디"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/passMember"
        app:layout_constraintEnd_toStartOf="@+id/idMember"
        app:layout_constraintTop_toTopOf="@+id/idMember" />

    <EditText
        android:id="@+id/idMember"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <Button
        android:id="@+id/checkMember"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="중복확인"
        app:layout_constraintBottom_toBottomOf="@+id/idMember"
        app:layout_constraintStart_toEndOf="@+id/idMember"
        app:layout_constraintTop_toTopOf="@+id/idMember" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="비밀번호"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/passMember2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/idMember" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 재입력"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nameMember"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/passMember" />

    <EditText
        android:id="@+id/passMember"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/idMember"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idMember"
        app:layout_constraintTop_toBottomOf="@+id/idMember" />

    <EditText
        android:id="@+id/passMember2"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="비밀번호 재입력"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/passMember"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passMember"
        app:layout_constraintTop_toBottomOf="@+id/passMember" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sexMemeber"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/passMember2" />

    <EditText
        android:id="@+id/nameMember"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/passMember2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passMember2"
        app:layout_constraintTop_toBottomOf="@+id/passMember2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ageMember"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/nameMember" />

    <RadioGroup
        android:id="@+id/sexMemeber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/nameMember"
        app:layout_constraintStart_toStartOf="@+id/nameMember"
        app:layout_constraintTop_toBottomOf="@+id/nameMember">

        <RadioButton
            android:id="@+id/maleMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남성" />

        <RadioButton
            android:id="@+id/femalMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여성" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ageMember"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/sexMemeber" />

    <EditText
        android:id="@+id/ageMember"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="나이"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/nameMember"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameMember"
        app:layout_constraintTop_toBottomOf="@+id/sexMemeber" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/memberbackaddress"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/memberaddress" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/frontPhoneMember"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/frontPhoneMember" />

    <Spinner
        android:id="@+id/frontPhoneMember"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:gravity="fill_vertical"
        android:overlapAnchor="false"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/backPhoneMember"
        app:layout_constraintEnd_toStartOf="@+id/backPhoneMember"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/backPhoneMember"
        app:layout_constraintVertical_bias="0.571" />

    <EditText
        android:id="@+id/backPhoneMember"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="'-'를 제외하고 입력"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/memberbackaddress"
        app:layout_constraintStart_toEndOf="@+id/frontPhoneMember"
        app:layout_constraintTop_toBottomOf="@+id/memberbackaddress" />

    <Button
        android:id="@+id/nextMemberOnly"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#2196F3"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backPhoneMember"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/memberbackaddress"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="상세 주소"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/memberaddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/memberaddress"
        app:layout_constraintTop_toBottomOf="@+id/memberaddress" />

    <TextView
        android:id="@+id/memberaddress"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@android:drawable/list_selector_background"
        android:backgroundTint="#2196F3"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start|center"
        android:text="도로명 주소"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ageMember"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/ageMember"
        app:layout_constraintTop_toBottomOf="@+id/ageMember" />

</androidx.constraintlayout.widget.ConstraintLayout>